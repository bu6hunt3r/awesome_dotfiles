old_stty_cfg=$(stty -g)
stty raw -echo
answer=$( while ! head -c 1 | grep -i '[ny]' ;do true ;done )
stty $old_stty_cfg
if echo "$answer" | grep -iq "^y" ;then
	mv ~/.zshrc ~/.zshrc.old
	mv ~/.tmux.conf ~/.tmux.conf.old
	mv ~/.vimrc ~/.vimrc.old
	mv ~/.msmtprc ~/.msmtprc.old
else
	echo -e "\nNot backing up old dotfiles."
fi

echo "Deploying zshrc"
printf "source '$HOME/dotfiles/zsh/zshrc_manager.sh'" > ~/.zshrc
echo "Deploying tmux config"
printf "source-file $HOME/dotfiles/tmux/tmux.conf" > ~/.tmux.conf


# Tmux fingers
echo "Installing tmux-fingers"
git clone --recursive https://github.com/Morantron/tmux-fingers ~/.tmux/plugins/tmux-fingers
echo "run-shell ~/.tmux/plugins/tmux-fingers/tmux-fingers.tmux" >> ~/.tmux.conf
echo "set -g @fingers-key F" >> "${HOME}/dotfiles/tmux/tmux.conf"
echo "set -g @fingers-pattern-0 '0x([0-9a-f]+)'" >> "${HOME}/dotfiles/tmux/tmux.conf"

# Neovim and various Plugins
