   (quote
    ("1436d643b98844555d56c59c74004eb158dc85fc55d2e7205f8d9b8c860e177f" default)))
 '(package-selected-packages (quote (gruvbox-theme org-brain org htmlize neotree))))
(custom-set-faces
 ;; custom-set-faces was added by Custom.
